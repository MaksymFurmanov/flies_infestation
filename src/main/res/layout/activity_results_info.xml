<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:id="@+id/parentLayout"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent"
                                                   android:background="@drawable/fliesbackground">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#72938585">

        <RelativeLayout
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@color/btn_purple"
                android:shadowColor="#FFFFFF"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="32dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="24dp">

            <ImageView
                    android:id="@+id/info_to_history"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/baseline_arrow_back_24"
                    tools:layout_editor_absoluteY="3dp"
                    tools:layout_editor_absoluteX="6dp"
                    />
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="305dp"
                android:layout_height="230dp"
                android:background="#255727"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="74dp"
                android:layout_alignParentStart="true"
                android:layout_marginStart="74dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="273dp">

            <TextView
                    android:text="About the game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteY="16dp"
                    tools:layout_editor_absoluteX="61dp"
                    android:textSize="20sp"
                    android:textColor="#FFFFFF"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="16dp"
                    android:layout_alignParentTop="true"/>

            <TextView
                    android:text="Date:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteY="59dp"
                    tools:layout_editor_absoluteX="28dp"
                    android:layout_marginTop="56dp"
                    android:layout_marginStart="34dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#FFFFFF"/>

            <TextView
                    android:text="Level:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteY="118dp"
                    tools:layout_editor_absoluteX="28dp"
                    android:layout_marginTop="129dp"
                    android:layout_marginStart="32dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#FFFFFF"/>

            <TextView
                    android:text="Killed:"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:layout_editor_absoluteY="59dp"
                    tools:layout_editor_absoluteX="157dp"
                    android:layout_marginTop="56dp"
                    android:layout_marginStart="184dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:textColor="#FFFFFF"/>

            <TextView
                    android:text="Max:"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    tools:layout_editor_absoluteY="118dp"
                    tools:layout_editor_absoluteX="157dp"
                    android:layout_marginTop="131dp"
                    android:layout_marginStart="189dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:textColor="#FFFFFF"/>

            <TextView
                    android:text="25.12.2023 20:03"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/Date"
                    android:layout_marginBottom="12dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginTop="78dp"
                    android:layout_alignParentTop="true"
                    android:textColor="#FFFFFF"
                    android:textAlignment="center"
                    android:layout_marginStart="5dp"/>

            <TextView
                    android:text="24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Killed"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="195dp"
                    android:layout_marginTop="79dp"
                    android:layout_alignParentTop="true"
                    android:textColor="#FFFFFF"/>

            <TextView
                    android:text="25"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Max"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="195dp"
                    android:layout_marginTop="151dp"
                    android:layout_alignParentTop="true"
                    android:textColor="#FFFFFF"/>

            <TextView
                    android:text="Hard"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Level"
                    android:layout_marginBottom="12dp"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="35dp"
                    android:layout_marginTop="151dp"
                    android:layout_alignParentTop="true"
                    android:textColor="#FFFFFF"/>

            <TextView
                    android:text="Won"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/Result"
                    android:layout_marginTop="188dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="117dp"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"/>

        </RelativeLayout>
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>